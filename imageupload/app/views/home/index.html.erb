<p style="float: right">
  Logged in as: 
  <%=link_to current_user.name, current_user %>
  <%= image_tag(current_user.avatar_url(:thumb), :size => "50x50", :class => "top") if current_user.avatar_url  %>
</p>
<h1>Featured</h1>
<section id="home">
	<div id="grid">
<% @featured.each do |user| %>
<div id="feature">
	<% if user.avatar_url(:thumb) %>
	<%= image_tag(user.avatar_url(:thumb)) if user.avatar_url %>
	<% end %>
  <p><%=link_to user.name, user %>
      Photos: <%= user.photos.size %>
	<%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
	</p>
</div>  
<% end %>
</div>
</section>

<h1>Community</h1>
<section id"allusers">
<div id="grid2">
<% @users.each do |user| %>
<div id="feature">
	<%= image_tag(user.avatar_url(:thumb)) if user.avatar_url %>
  <p><%=link_to user.name, user %>
      Photos: <%= user.photos.size %>
	<%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
	</p>
</div>  
<% end %>
</div>
</section>
