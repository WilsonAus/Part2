<article class = "sign">
	 <%= image_tag("sign_in.png", :alt => "Aeroplane Image") %>
</article>

<section class="signin">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <ul>
  	<li>
  	  <%= f.email_field :email, :id => 'email', :placeholder => 'Email', :autofocus => true %>
  	</li>

 	 <li>
 		<%= f.password_field :password, :id => 'password', :placeholder => 'Password' %>
	</li>

  <% if devise_mapping.rememberable? -%>
    <li><%= f.check_box :remember_me %> <%= f.label :remember_me %></li>
  <% end -%>

  <li><%= f.submit "Sign in" %></li>
<% end %>

<li><%= render "devise/shared/links" %></li>
  </ul>
</section>